<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterInfo">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/medipass_xl"
        android:layout_marginBottom="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/prenomtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prenom"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/prenom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="9"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_prenom"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry"
                android:background="@drawable/box_a" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/nomtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nom"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/nom"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="9"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:hint="@string/hint_nom"
                android:paddingStart="5dp"
                tools:ignore="RtlSymmetry"
                android:background="@drawable/box_a" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/mailtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mail"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="9"
            android:inputType="textEmailAddress"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_mail"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry"
            android:background="@drawable/box_b" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/pwdtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwd"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="9"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_pwd"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry"
            android:background="@drawable/box_b"
             />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/vpwdtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vpwd"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/vpwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="9"
            android:inputType="textPassword"
            android:layout_marginTop="10dp"
            android:hint="@string/hint_vpwd"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry"
            android:background="@drawable/box_b" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ligne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/rectangle_blanc">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Retour" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:background="@drawable/rectangle_violet">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/account" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="J'ai déjà un compte"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/violet"
        android:textAlignment="center"/>


</LinearLayout>